<Window x:Class="ButtonTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button Style="{StaticResource TriangleButton}" HorizontalAlignment="Left" Margin="72,126,0,0" VerticalAlignment="Top" />
        <Button Style="{DynamicResource RoundedRectangleButton}" HorizontalAlignment="Left" Margin="223,136,0,0" VerticalAlignment="Top"/>
        <Button Style="{DynamicResource HexagonButton}" Content="Button" HorizontalAlignment="Left" Margin="462,126,0,0" VerticalAlignment="Top" Height="71" Width="64"/>
    </Grid>
</Window>
